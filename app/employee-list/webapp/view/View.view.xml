<mvc:View xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
          xmlns="sap.m"
          xmlns:html="http://www.w3.org/1999/xhtml"
          controllerName="employeelist.controller.View">
          
    <Page id="employeeDetailPage" title="{i18n>EmployeeDetails}">
        <content>
            <VBox id="viewVBox" class="employeeDetailsContainer">
                <Input id="viewInputFirstName" value="{employees>FirstName}" placeholder="{i18n>FirstName}" />
                <Input id="viewInputLastName" value="{employees>LastName}" placeholder="{i18n>LastName}" />
                <DatePicker id="viewDateOfJoiningPicker" value="{employees>dateOfJoining}" placeholder="{i18n>DateOfJoining}" />
                <Input id="viewInputAddress" value="{employees>Address}" placeholder="{i18n>Address}" />
            </VBox>
            <Button id="btnSave" text="{i18n>Save}" press=".onSave" />
            <Button id="btnBack" text="{i18n>Back}" press=".onBack" />
        </content>
    </Page>
</mvc:View>
